@page
@model OdeToFood.ListModel
@{
  ViewData["Title"] = "Restaurants";
}

<h1>Restaurants</h1>

@if (Model.DeleteMessage != null)
{
  <div class="alert alert-danger">@Model.DeleteMessage</div>
}

<form method="get">
  <div class="form-group">
    <div class="input-group">
      <input type="search" class="form-control" id="searchTerm" name="searchTerm" value="" asp-for="SearchTerm" />
      <span class="input-group-btn">
        <button class="btn btn-default"><i class="material-icons">search</i></button>
      </span>
    </div>
  </div>
</form>
    @foreach (var restaurant in Model.Restaurants)
    {
      <partial name="_Summary" model="restaurant"/>
    }
<a asp-page="./Edit" class="btn btn-primary">Add New</a>
@section footer {
  <div>@Model.Message</div>
}
