@using OdeToFood.Core
@model Restaurant 

<div class="card mb-4">
  <div class="card-header">
    <h3>@Model.Name</h3>
  </div>
  <div class="card-body">
    <p>Location: @Model.Location</p>
    <p>Cuisine: @Model.Cuisine</p>
  </div>
  <div class="card-footer">
    <a class="btn btn-default"
        asp-page="./Detail"
        asp-route-restaurantId="@Model.Id">
      <i class="material-icons">pageview</i>
    </a>
    <a class="btn btn-default"
        asp-page="./Edit"
        asp-route-restaurantId="@Model.Id">
      <i class="material-icons">create</i>
    </a>
    <a class="btn btn-default"
        asp-page="./Delete"
        asp-route-restaurantId="@Model.Id">
      <i class="material-icons text-danger">delete_forever</i>
    </a>
  </div>
</div>